@model List<Category>								//przechwycenie danych z kontrolera

<h1>Category List</h1>
<table class="table table-bordered table-striped">
	<thead>
		<!--głowa tabeli-->
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
		</tr>
	</thead>
	<tbody>
		<!--ciało tabeli-->
		@foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))			//sortujemy według kolumny displayorder
		{
			<tr>
				<td>@obj.Name</td>
				<td>
					@obj.DisplayOrder
				</td>
			</tr>
		}
	</tbody>
</table>